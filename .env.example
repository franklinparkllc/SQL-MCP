# Environment variables for Docker Compose
# Copy this file to .env and update with your actual values

# .NET Implementation Configuration
# For local SQL Server with SQL Authentication
DOTNET_CONNECTION_STRING=Server=host.docker.internal;Database=test;User ID=sa;Password=YourStrongPassword123;TrustServerCertificate=True

# For Azure SQL Database with Azure AD Authentication
# DOTNET_CONNECTION_STRING=Server=tcp:your-server.database.windows.net,1433;Initial Catalog=your-database;Encrypt=Mandatory;TrustServerCertificate=False;Connection Timeout=30;Authentication=Active Directory Interactive

# Node.js Implementation Configuration
NODE_SERVER_NAME=host.docker.internal
NODE_DATABASE_NAME=test
NODE_READONLY=false
NODE_CONNECTION_TIMEOUT=30
NODE_TRUST_SERVER_CERTIFICATE=false

# For Azure SQL Database
# NODE_SERVER_NAME=your-server.database.windows.net
# NODE_DATABASE_NAME=your-database-name